<h1>Bookings</h1>

<% if @bookings.any? %>
  <table>
    <thead>
      <tr>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Robot</th>
        <th>User</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.start_date %></td>
          <td><%= booking.end_date %></td>
          <td><%= booking.robot.name %></td>
          <td><%= booking.user.name %></td>
          <td>
            <%= link_to 'Delete', booking_path(booking), turbo_method: :delete, data: { turbo_confirm: 'Are you sure you want to delete this booking?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No bookings available.</p>
<% end %>

<%= link_to 'New Booking', new_booking_path %>
