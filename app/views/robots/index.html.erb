<div data-controller="search">
  <div class="d-flex justify-content-between align-items-center mb-5">
    <h1 class="page-title">ROBOTS</h1>
    <%# Search bar %>
      <div class="d-flex gap-4">
        <% if user_signed_in? %>
          <%= link_to 'My Robots', my_robots_path, class: 'button' %>
          <%= link_to 'My Bookings', my_bookings_path, class: 'button' %>
        <% end %>
          <div>
            <%= link_to 'New Robot', new_robot_path, class: 'button' %>
          </div>
      </div>
  </div>
  <div class="d-flex justify-content-center mb-5"><input  placeholder='Start typing to filter by name or type...' data-search-target="input" data-action='input->search#search' class="search-bar"></div>

  <div class="cards-grid">
    <%= render 'robots', robots: @robots %>
  </div>
</div>

