<div class="robot">
  <% @robots.each do |robot| %>
    <h2><%= robot.name %></h2>
    <p>Description: <%= robot.description %></p>
    <p>Price: <%= robot.price %></p>
    <p>Availability: <%= robot.availability ? 'Available' : 'Not available' %></p>

    <%= button_to 'Edit', edit_robot_path(robot), method: :get, class: 'button' %>
    <%= button_to 'Delete', robot_path(robot), method: :delete, data: { confirm: 'Are you sure you want to delete this robot?' }, class: 'button' %>

    <hr>
  <% end %>

  <%= link_to 'Back', robots_path %>
</div>
