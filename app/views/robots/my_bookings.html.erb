<h1>My Bookings</h1>

<% @bookings.each do |booking| %>
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title"><%= link_to booking.robot.name, booking_path(booking) %></h5>
      <p class="card-text">Start Date: <%= booking.start_date %></p>
      <p class="card-text">End Date: <%= booking.end_date %></p>
      <!-- Add more booking details as needed -->
    </div>
  </div>
<% end %>

<%= link_to 'Back', robots_path %>
