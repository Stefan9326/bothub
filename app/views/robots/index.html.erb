<h1>ALL ROBOTS</h1>
<% if user_signed_in? %>
  <div class="text-right">
    <%= link_to 'My Robots', my_robots_path, class: 'btn btn-primary' %>
    <%= link_to 'My Bookings', my_bookings_path, class: 'btn btn-primary' %>
  </div>
<% end %>
<div class="d-flex justify-content-between mb-3">
  <div>
    <%= link_to 'New Robot', new_robot_path, class: 'btn btn-primary' %>
  </div>
  <div class="d-flex mb-3">
    <%= form_tag robots_path, method: :get, class: 'form-inline', data: { controller: 'search' } do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Search by type', data: { target: 'search.input' } %>
        <div class="input-group-append">
          <%= submit_tag 'Search', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <% @robots.each do |robot| %>
    <% unless user_signed_in? && robot.user == current_user %>
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100 w-100">
          <% if robot.image.attached? %>
            <%= cl_image_tag robot.image.key, height: 200, crop: :fill %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to robot.name, robot_path(robot) %></h5>
            <p class="card-text"><%= robot.description.truncate(100) %></p>
            <p class="card-text">Type: <%= robot.robot_type %></p>
            <p class="card-text">Price: <%= robot.price %></p>
            <p class="card-text">Availability: <%= robot.availability ? 'Available' : 'Not Available' %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
